<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<ScrollPane fx:id="MainSP" fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userinterface.customer.TopCustomerController">
   <content>
      <BorderPane fx:id="MainBP" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0">
         <top>
            <HBox alignment="BOTTOM_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="60.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <ComboBox fx:id="UserCB" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#SetCBOnAction" prefHeight="38.0" prefWidth="150.0" />
                  <Label fx:id="FileLABEL" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="23.0" prefWidth="328.0" text="File:" HBox.hgrow="ALWAYS" />
                  <Label fx:id="YazLABEL" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="17.0" prefWidth="77.0" text="Current Yaz:" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <BorderPane.margin>
                  <Insets bottom="60.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <center>
            <TabPane fx:id="customerOptionsTB" nodeOrientation="LEFT_TO_RIGHT" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab fx:id="information" text="Information">
                     <content>
                        <fx:include fx:id="informationTab" source="information/InformationTab.fxml" />
                     </content>
                </Tab>
                <Tab fx:id="inlay" text="Inlay" />
                  <Tab fx:id="payments" text="Payments">
                     <content>
                        <fx:include fx:id="paymentsTab" source="payments/PaymentsTab.fxml" />
                     </content></Tab>
              </tabs>
               <BorderPane.margin>
                  <Insets top="-50.0" />
               </BorderPane.margin>
            </TabPane>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
