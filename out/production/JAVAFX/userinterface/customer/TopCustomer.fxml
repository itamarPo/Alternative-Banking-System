<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<ScrollPane fx:id="MainSP" fitToHeight="true" fitToWidth="true" stylesheets="@TopCustomer1.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userinterface.customer.TopCustomerController">
   <content>
      <BorderPane fx:id="MainBP" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" styleClass="background-only">
         <top>
            <HBox alignment="BOTTOM_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="60.0" prefWidth="600.0" spacing="10.0" styleClass="background-only" BorderPane.alignment="CENTER">
               <children>
                  <ComboBox id="customers-combo-box" fx:id="UserCB" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#SetCBOnAction" prefHeight="38.0" prefWidth="150.0" />
                  <Label fx:id="FileLABEL" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="23.0" prefWidth="328.0" styleClass="top-labels" text="File:" HBox.hgrow="ALWAYS" />
                  <Label fx:id="YazLABEL" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="17.0" prefWidth="77.0" styleClass="top-labels" text="Current Yaz:" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <BorderPane.margin>
                  <Insets bottom="60.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <center>
            <TabPane id="customer-options-tabpane" fx:id="customerOptionsTB" nodeOrientation="LEFT_TO_RIGHT" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab fx:id="information" styleClass="customer-options-tab" text="Information">
                     <content>
                        <fx:include fx:id="informationTab" source="information/InformationTab.fxml" />
                     </content>
                </Tab>
                <Tab fx:id="inlay" styleClass="customer-options-tab" text="Inlay">
                     <content>
                        <fx:include fx:id="inlayTab" source="inlay/inlayTAB.fxml" />
                     </content></Tab>
                  <Tab fx:id="payments" styleClass="customer-options-tab" text="Payments">
                     <content>
                        <fx:include fx:id="paymentsTab" source="payments/PaymentsTab.fxml" />
                     </content></Tab>
                  <Tab fx:id="buySellLoans" styleClass="customer-options-tab" text="Buy/Sell Loans">
                     <content>
                        <fx:include fx:id="loanSellTab" source="loanforsell/loanforsell.fxml" />
                     </content>
                  </Tab>
              </tabs>
               <BorderPane.margin>
                  <Insets top="-50.0" />
               </BorderPane.margin>
            </TabPane>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
