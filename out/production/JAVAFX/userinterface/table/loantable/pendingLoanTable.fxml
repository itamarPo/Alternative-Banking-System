<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userinterface.table.loantable.PendingLoanTableController">
   <content>
      <TableView fx:id="tableView" minHeight="-Infinity" minWidth="-Infinity" prefHeight="160.0" prefWidth="600.0" styleClass="table-view">
        <columns>
          <TableColumn fx:id="loanID" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Loan ID" />
          <TableColumn fx:id="category" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Category" />
            <TableColumn fx:id="owner" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Owner" />
            <TableColumn fx:id="amount" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Amount" />
            <TableColumn fx:id="duration" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Duration" />
            <TableColumn fx:id="interest" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Interest" />
            <TableColumn fx:id="timePerPayment" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Time&#10;Between&#10;Payments" />
            <TableColumn fx:id="listOfLenders" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Lenders" />
            <TableColumn fx:id="collectedSoFar" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Collected&#10;So Far" />
            <TableColumn fx:id="sumLeftToBeCollected" minWidth="-1.0" prefWidth="75.0" styleClass="table-column" text="Left To&#10;Become&#10;Active" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </content>
</ScrollPane>
